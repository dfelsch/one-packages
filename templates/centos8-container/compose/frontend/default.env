# This is the default environment file for the opennebula (frontend) image
# (Use the 'custom.env' file in this directory to accomodate your changes)

###############################################################################
# PLEASE DO NOT EDIT THIS FILE !                                              #
###############################################################################

#
# Default image params / container(s) variables
#

# frontend-wide
OPENNEBULA_FRONTEND_HOST=${HOSTNAME}
OPENNEBULA_FRONTEND_SSH_HOST=${HOSTNAME}
OPENNEBULA_FRONTEND_PREHOOK=/config/pre-bootstrap-hook.sh
OPENNEBULA_FRONTEND_POSTHOOK=/config/post-bootstrap-hook.sh
OPENNEBULA_FRONTEND_ONECFG_PATCH=/config/onecfg_patch

# oneadmin user
ONEADMIN_PASSWORD=changeme123
ONEADMIN_SSH_PRIVKEY=/ssh/id_rsa
ONEADMIN_SSH_PUBKEY=/ssh/id_rsa.pub

# mysql
MYSQL_HOST=opennebula-mysql
MYSQL_PORT=3306
MYSQL_ROOT_PASSWORD=changeme123
MYSQL_DATABASE=opennebula
MYSQL_USER=oneadmin
MYSQL_PASSWORD=changeme123

# oned
ONED_HOST=opennebula-oned

# onegate
ONEGATE_HOST=opennebula-gate
ONEGATE_PORT=5030

# oneflow
ONEFLOW_HOST=opennebula-flow

# memcache
MEMCACHED_HOST=opennebula-memcached

# oneprovision
ONEPROVISION_HOST=opennebula-provision

# guacd
GUACD_HOST=opennebula-guacd

# fireedge
FIREEDGE_HOST=opennebula-fireedge

# sunstone/apache
SUNSTONE_HTTPS_ENABLED=yes
SUNSTONE_PORT=8080
SUNSTONE_TLS_PORT=4443
SUNSTONE_VNC_PORT=29876

# tls certs
TLS_PROXY_ENABLED=yes
TLS_VALID_DAYS=365
TLS_CERT=/certs/opennebula.crt
TLS_KEY=/certs/opennebula.key

# docker service
DIND_ENABLED=yes
DIND_HOST=opennebula-docker
DIND_TCP_ENABLED=yes
